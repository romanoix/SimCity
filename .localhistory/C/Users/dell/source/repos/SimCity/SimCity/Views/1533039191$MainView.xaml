<Window
    x:Class="SimCity.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimCity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimCity"
    Width="700"
    Height="400"
    Background="#FFE0D6D6"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="32*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Kraj" />
            <ComboBox
                x:Name="CountryComboBox"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                SelectionChanged="CountryComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Prezydent" />
            <ComboBox
                x:Name="PresidentComboBox"
                Grid.Row="0"
                Grid.Column="1"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                SelectionChanged="PresidentComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="2">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Miasto" />
            <ComboBox
                x:Name="CityComboBox"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                SelectionChanged="CityComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="3">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Ulica" />
            <ComboBox
                x:Name="PlaceComboBox"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                SelectionChanged="PlaceComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="4">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Budynek" />
            <ComboBox
                x:Name="BuildingComboBox"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                SelectionChanged="BuildingComboBox_SelectionChanged" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Kraj" />
            <TextBox
                x:Name="CountrySetNameCountry"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Kontynent"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="CountrySetContinent"
                Grid.Row="1"
                Grid.Column="0"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Imię Nazwisko Prezydenta" />
            <TextBox
                x:Name="PresidentSetName"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Wiek"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="PresidentSetAge"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="2">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Nazwa miasta" />
            <TextBox
                x:Name="CitySetName"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Populacja"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="CitySetPopulation"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="3">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Nazwa placu" />
            <TextBox
                x:Name="PlaceSetName"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Populacja"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="PlaceSetPopulation"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="4">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Typ budynku" />
            <TextBox
                x:Name="BuildingSetType"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Budynek z oknami:"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="BuildingSetWindows"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Budynek przemysłowy:"
                RenderTransformOrigin="0.516,0.5" />
            <TextBox
                x:Name="BuildingSetIsIndustrial"
                Width="130"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center" />
        </StackPanel>

        <Label
            x:Name="SaveAndDelete"
            Grid.Row="3"
            Grid.ColumnSpan="5"
            Content="Przycisk |Zapisz| wprowadzi zmiany dokonane w oknach tekstowych dla wybranych pozycji. Przycisk |Usuń| usinie Państwo." />

        <Button
            x:Name="Save"
            Grid.Row="4"
            Grid.Column="3"
            Width="80"
            Height="30"
            Content="Zapisz" Click="Save_Click" />
        <Button
            x:Name="Delete"
            Grid.Row="4"
            Grid.Column="4"
            Width="80"
            Height="30"
            Content="Usuń" />



    </Grid>
</Window>
